@{
    ViewBag.Title = "Home Page";
}
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style > #quote-carousel {
        padding: 0 10px 30px 10px;
        margin-top: 30px;
        /* Control buttons  */
        /* Previous button  */
        /* Next button  */
        /* Changes the position of the indicators */
        /* Changes the color of the indicators */
    }

    #quote-carousel .carousel-control {
        background: none;
        color: #CACACA;
        font-size: 2.3em;
        text-shadow: none;
        margin-top: 30px;
    }

        #quote-carousel .carousel-control.left {
            left: -60px;
        }

        #quote-carousel .carousel-control.right {
            right: -60px;
        }

    #quote-carousel .carousel-indicators {
        right: 50%;
        top: auto;
        bottom: 0px;
        margin-right: -19px;
    }

        #quote-carousel .carousel-indicators li {
            width: 50px;
            height: 50px;
            margin: 5px;
            cursor: pointer;
            border: 4px solid #CCC;
            border-radius: 50px;
            opacity: 0.4;
            overflow: hidden;
            transition: all 0.4s;
        }

        #quote-carousel .carousel-indicators .active {
            background: #333333;
            width: 128px;
            height: 128px;
            border-radius: 100px;
            border-color: #f33;
            opacity: 1;
            overflow: hidden;
        }

    .carousel-inner {
        min-height: 300px;
    }

    .item blockquote {
        border-left: none;
        margin: 0;
    }

        .item blockquote p:before {
            content: "\f10d";
            font-family: 'Fontawesome';
            float: left;
            margin-right: 10px;
        }

    </style >
    <div class="container">
        <div class="row">
            <div class="col-md-12" data-wow-delay="0.2s">
                <div class="carousel slide" data-ride="carousel" id="quote-carousel" data-interval="5000" data-pause="hover" data-wrap="true">
                    <!-- Bottom Carousel Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#quote-carousel" data-slide-to="0" class="active">
                            <img class="img-responsive" src="~/images/Siddiq.jpg" alt="" />
                        </li>
                        <li data-target="#quote-carousel" data-slide-to="1">
                            <img class="img-responsive" src="~/images/Siddiq.jpg" alt="" />
                        </li>
                        <li data-target="#quote-carousel" data-slide-to="2">
                            <img class="img-responsive" src="~/images/Siddiq.jpg" alt="" />
                        </li>
                    </ol>
                    <!-- Carousel Slides / Quotes -->
                    <div class="carousel-inner text-center">
                        <!-- Quote 1 -->
                        <div class="item active">
                            <blockquote>
                                <div class="row">
                                    <div class="col-sm-8 col-sm-offset-2">
                                        <p><strong>Business Pro: Business Management System</strong> can handle all of Your Business Related Activities in an organized way!</p>
                                        <small>Hafiz Siddiq Umer</small>
                                    </div>
                                </div>
                            </blockquote>
                        </div>
                        <!-- Quote 2 -->
                        <div class="item">
                            <blockquote>
                                <div class="row">
                                    <div class="col-sm-8 col-sm-offset-2">
                                        <p><strong>Business Pro: Business Management System</strong> can help you managing Inventory, Keep Track of products, Manage Sale and Purchase, Keep Track of Sale and Purchase, Generate Invoices and much more! </p>
                                        <small>Hafiz Siddiq Umer</small>
                                    </div>
                                </div>
                            </blockquote>
                        </div>
                        <!-- Quote 3 -->
                        <div class="item">
                            <blockquote>
                                <div class="row">
                                    <div class="col-sm-8 col-sm-offset-2">
                                        <p><strong>Reports</strong> are important part of business. By reports a business man can know exact about his financial conditions, profit, loss, and also he can make decisions! <strong>Business Pro: Business Management System </strong> have a well organized way of reporting. it can genrate Income Statement, Trail Balance, Balance Sheet, Manage Accounts in Ledger, Sale Report Purchase Report etc.</p>
                                        <small>Hafiz Siddiq Umer</small>
                                    </div>
                                </div>
                            </blockquote>
                        </div>
                    </div>
                    <!-- Carousel Buttons Next/Prev -->
                    <a data-slide="prev" href="#quote-carousel" class="left carousel-control"><i class="fa fa-chevron-left"></i></a>
                    <a data-slide="next" href="#quote-carousel" class="right carousel-control"><i class="fa fa-chevron-right"></i></a>
                </div>
            </div>
        </div>
    </div>
<div class="row">
    <div class="col-md-3">
        <h2>Getting Started</h2>
        <p>
            You are here, because you want to Manage Your Business
        </p>
        <p><a class="btn btn-default" href="@Url.Action("Create","Category")">CATEGORY &raquo;</a></p>
    </div>
    <div class="col-md-3">
        <h2>Add Products</h2>
        <p>You can Add Products for a specific Category </p>
        <p><a class="btn btn-default" href="@Url.Action("Add", "Product")">PRODUCTS &raquo;</a></p>
    </div>
    <div class="col-md-3">
        <h2>Add Vendors</h2>
        <p>You can easily add New Vendors so that you can deal with them,</p>
        <p><a class="btn btn-default" href="@Url.Action("Vendors", "Vendor")">VENDORS &raquo;</a></p>
    </div>
    <div class="col-md-3">
        <h2>Add Customers</h2>
        <p>You can easily add New Customers so that you can deal with them,</p>
        <p><a class="btn btn-default" href="@Url.Action("Customers", "Customer")">CUSTOMERS &raquo;</a></p>
    </div>
</div>