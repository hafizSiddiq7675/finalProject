            type: "GET",
            //data: { id: element },
            dataType: "json",
            success: function (data) {
                var rows = '';
                $.each(data, function (i, item) {
                    var date = ToJavaScriptDate(item.saleDate);
                    rows += "<tr class='Search' id='_row(" + item.saleId + ")'>"
                    rows += "<td>" + item.saleId + "</td>"
                    rows += "<td>" + date + "</td>"
                    rows += "<td>" + item.customerCode + "</td>"
                    rows += "<td>" + item.customerName + "</td>"
